{
  "name": "backend-engineer-test",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "docker:start": "docker-compose up -d --build",
    "docker:db-start": "docker-compose up -d db",
    "docker:db-clean": "docker-compose down -v && bun docker:db-start",
    "docker:stop": "docker-compose down",
    "docker:dblogs": "docker-compose logs db",
    "migrate": "bun scripts/migrate.ts",
    "migrate:up": "bun scripts/migrate.ts up",
    "migrate:down": "bun scripts/migrate.ts down",
    "migrate:status": "bun scripts/migrate.ts status",
    "migrate:create": "bun scripts/migrate.ts create",
    "seed": "bun run src/seed.ts",
    "seed-with-env": "DATABASE_URL=postgres://myuser:mypassword@localhost:5432/mydatabase bun run src/seed.ts",
    "test": "npm run test:db:setup && ./scripts/test-wrapper.sh spec/ --timeout 60000 && npm run test:nuke",
    "test:db:setup": "./scripts/test-db-setup.sh setup",
    "test:db:reset": "./scripts/test-db-setup.sh reset",
    "test:db:drop": "./scripts/test-db-setup.sh clean",
    "test:cleanup": "./scripts/test-cleanup.sh",
    "test:nuke": "npm run test:cleanup && npm run test:db:drop",
    "test:unit": "./scripts/test-wrapper.sh spec/utils.spec.ts --timeout 10000",
    "test:db": "npm run test:db:setup && ./scripts/test-wrapper.sh spec/index.spec.ts --timeout 30000 && npm run test:nuke",
    "test:api": "npm run test:db:setup && ./scripts/test-wrapper.sh spec/api.spec.ts --timeout 60000 && npm run test:nuke",
    "test:ci": "docker-compose -f docker-compose.test.yaml up -d db-test && sleep 5 && ./scripts/test-wrapper.sh spec/ --timeout 60000 && npm run test:nuke",
    "test:full": "./scripts/test-full.sh",
    "test:core": "./scripts/test-core.sh  && npm run test:nuke",
    "lint": "eslint src/ spec/ --ext .ts",
    "lint:fix": "eslint src/ spec/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"spec/**/*.ts\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"spec/**/*.ts\" \"*.{js,json,md}\"",
    "code:check": "npm run lint && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/pg": "^8.11.8",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "fastify": "^5.6.1",
    "pg": "^8.12.0",
    "zod": "^4.1.9"
  }
}
